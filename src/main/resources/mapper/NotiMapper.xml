<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mi.noti.board.mapper.NotiMapper">
	<insert id="insertWrite">
		insert into notitxt values(null, #{title}, #{detail}, #{userName}, 0, now())
	</insert>
	
	<select id="selectNotiTxtList" resultType="mi.noti.board.model.NotiTxt">
		select no, title, name, hit, created from notitxt order by notitxt.no desc
	</select>
	
	<select id="selecctNotiTxt" resultType="mi.noti.board.model.NotiTxt">
		select * from notitxt where notitxt.no = #{no}
	</select>
</mapper>